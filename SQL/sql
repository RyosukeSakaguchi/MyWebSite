INSERT INTO position_master (position) VALUES ('事務');
INSERT INTO position_master (position) VALUES ('プログラマー');
CREATE TABLE salary_master (id SERIAL PRIMARY KEY UNIQUE Not Null, position varchar(255) UNIQUE Not Null, hourly_wage INT Not Null, overtime_hourly_wage INT Not Null );
